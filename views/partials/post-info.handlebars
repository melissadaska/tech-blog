<article class="post">
  <div class="title">
    <h3>{{title}}</h3>
    <p>({{post_content}})</p>
  </div>
  <div class="meta">
    Posted by <strong>{{user.username}}</strong> on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>  
  </div>
</article>
